<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivTalento"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="@color/loginBkColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvOfertaEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ejemplo Empresa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivTalento"/>
    <TextView
        android:id="@+id/tvOfertaCarrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ejemplo Carrera"
        app:layout_constraintTop_toBottomOf="@+id/tvOfertaEmpresa"
        app:layout_constraintStart_toEndOf="@+id/ivTalento"/>
    <TextView
        android:id="@+id/tvOfertaFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ejemplo Fecha"
        app:layout_constraintTop_toBottomOf="@+id/tvOfertaCarrera"
        app:layout_constraintStart_toEndOf="@+id/ivTalento"/>
    <TextView
        android:id="@+id/tvOfertaSemestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ejemplo Semestre"
        app:layout_constraintTop_toBottomOf="@+id/tvOfertaFecha"
        app:layout_constraintStart_toEndOf="@+id/ivTalento"/>
    <TextView
        android:id="@+id/tvOfertaDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Ejemplo DescripciÃ³n"
        app:layout_constraintTop_toBottomOf="@+id/tvOfertaSemestre"
        app:layout_constraintStart_toEndOf="@+id/ivTalento"/>

</androidx.constraintlayout.widget.ConstraintLayout>