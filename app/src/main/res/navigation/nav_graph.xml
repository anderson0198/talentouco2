<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.example.talentouco2.FirstFragment"
        android:label="Login"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_login_to_recyclerViewFragment"
            app:destination="@id/recyclerViewFragment" />
        <action
            android:id="@+id/action_login_to_recyclerActivity"
            app:destination="@id/recyclerActivity" />
        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/register" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="com.example.talentouco2.SecondFragment"
        android:label="Register"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/login" />
        <action
            android:id="@+id/action_register_to_recyclerViewFragment"
            app:destination="@id/recyclerViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/recyclerViewFragment"
        android:name="com.example.talentouco2.RecyclerViewFragment"
        android:label="fragment_recycler_view"
        tools:layout="@layout/fragment_recycler_view" />
    <activity
        android:id="@+id/recyclerActivity"
        android:name="com.example.talentouco2.RecyclerActivity"
        android:label="activity_recycler"
        tools:layout="@layout/activity_recycler" />
</navigation>